<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context-3.0.xsd">
    <context:annotation-config />
    
    <bean id="generator" class="com.qlicks.slideshow.SlideshowGenerator" />
    <bean id="generation" class="com.qlicks.slideshow.services.SlideGenerationFactory" />
    <bean id="loader" class="com.qlicks.slideshow.services.JsonFileLoaderFactory" />
    <bean id="rule" class="com.qlicks.slideshow.services.RuleFactory" />
    <bean id="saver" class="com.qlicks.slideshow.services.HtmlFileSaverService" />
    
    <!-- RULES -->
    <bean id="dateFormatRule" class="com.qlicks.slideshow.services.rule.DateFormatRule" />
    <bean id="groupByKeyRule" class="com.qlicks.slideshow.services.rule.GroupByKeyRule" />
    <bean id="inspectRule" class="com.qlicks.slideshow.services.rule.InspectRule" />
    <bean id="listRule" class="com.qlicks.slideshow.services.rule.ListRule" />
    <bean id="messageFormatRule" class="com.qlicks.slideshow.services.rule.MessageFormatRule" />
    <bean id="numberFormatRule" class="com.qlicks.slideshow.services.rule.NumberFormatRule" />
    <bean id="paragraphRule" class="com.qlicks.slideshow.services.rule.ParagraphRule" />
    <bean id="rawRule" class="com.qlicks.slideshow.services.rule.RawRule" />
    <bean id="removeRepeatRule" class="com.qlicks.slideshow.services.rule.RemoveRepeatRule" />
    <bean id="sortRule" class="com.qlicks.slideshow.services.rule.SortRule" />
</beans>